{
    "window.zoomLevel": 1,
    "files.autoSave": "afterDelay",
    "terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",
    "editor.autoClosingBrackets": "always",
    // "editor.rulers": [
    //     80,
    //     120
    // ],
    "files.eol": "\n",
    "editor.formatOnSave": true,
    "C_Cpp.clang_format_path": "/usr/bin/clang-format", // linux clangï¼š dnf install git-clang-format
    "C_Cpp.clang_format_style": "{ BasedOnStyle: Chromium, IndentWidth: 4}",
    //latex-workshop
    "latex-workshop.latex.recipes": [
        // {
        //     "name": "PDFLaTeX",
        //     "tools": [
        //         "pdflatex"
        //     ]
        // },
        {
            "name": "pdflatex -> bibtex -> pdflatex*2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "xelatex",
            "tools": [
                "xelatex"
            ]
        },
        {
            "name": "xelatex -> xelatex",
            "tools": [
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOC%"
            ]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    "editor.minimap.enabled": true,
    "workbench.activityBar.visible": true,
    // "matlab.matlabpath": "E:\\Matlab\\bin",
    // "matlab.mlintpath": "E:\\Matlab\\bin\\win64",
    // "python.dataScience.sendSelectionToInteractiveWindow": true,
    "workbench.colorCustomizations": {
        // "terminal.border": "#77FF00",
        "terminal.foreground": "#b5e08f",
    },
    "editor.renderWhitespace": "none",
    "breadcrumbs.enabled": false,
    "python.formatting.provider": "none"
}
